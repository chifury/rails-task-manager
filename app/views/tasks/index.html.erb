<div class="container">
<h1 class="mt-3 text-decoration-underline">Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <%= link_to task_path(task), class: "list-unstyled text-decoration-none" do %>
    <li><%= task[:title].capitalize %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Create new task", new_task_path, class: "btn btn-success" %>
</div>
